<odoo>
    <data>

        <record id="category_product_display_type_view_form" model="ir.ui.view">
            <field name="name">category.product.display.type.view.form</field>
            <field name="model">category.product.display.type</field>
            <field name="arch" type="xml">
                <form string="Product Type">
                    <group>
                        <field name="display_type" style="width: 200px"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_category_product_display_type_form" model="ir.actions.act_window">
            <field name="name">Product Type</field>
            <field name="res_model">category.product.display.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model='ir.ui.view' id='banner_tree_view'>
            <field name='name'>Product management/ Product Type</field>
            <field name='model'>category.product.display.type</field>
            <field name='arch' type='xml'>
                <tree string='Product Type'>
                    <field name="display_type"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>